@model Blogapp.Models.BlogPost
@{
    ViewData["Title"] = "View";
}
<!Doctype html>
<html>
<head>

    <title>Blog Post</title>
</head>
<body>
    <h2>View</h2>

    <h4>BlogPost</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">

                    <label asp-for="blogTitle" class="cotrol-label"> </label>
                    <input asp-for="blogTitle" class="form-control" />
                    <span asp-validation-for="blogTitle" class="text-danger"></span>

                </div>
                <div class="form-group">

                    <label asp-for="content" class="cotrol-label"> </label>
                    <input asp-for="content" class="form-control" />
                    <span asp-validation-for="content" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <label asp-for="blogDate" class="cotrol-label"> </label>
                    <input asp-for="blogDate" class="form-control" />
                    <span asp-validation-for="blogDate" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <input type="submit"  value="Post Blog"  class="btn btn-default"/>

                </div>

            </form>  


        </div>




    </div>
</body>
</html>